{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "regexManagers": [
    {
      "fileMatch": ["Dockerfile"],
      "matchStrings": [
        "CADDY_VERSION=(?<currentValue>v[0-9\\.]+)"
      ],
      "datasourceTemplate": "go",
      "packageNameTemplate": "github.com/caddyserver/caddy/v2",
      "versioningTemplate": "semver"
    },
    {
      "fileMatch": ["Dockerfile"],
      "matchStrings": [
        "github.com/caddyserver/xcaddy/cmd/xcaddy@(?<currentValue>v[0-9\\.]+)",
        "github.com/lucaslorentz/caddy-docker-proxy/v2@(?<currentValue>v[0-9\\.]+)",
        "github.com/caddy-dns/cloudflare@(?<currentValue>v[0-9\\.\\-]+)",
        "github.com/WeidiDeng/caddy-cloudflare-ip@(?<currentValue>v[0-9\\.\\-]+)"
      ],
      "datasourceTemplate": "go",
      "packageNameTemplate": "{{packageName}}",
      "versioningTemplate": "semver"
    }
  ]
}
