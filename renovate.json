{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "Dockerfile"
      ],
      "matchStrings": [
        "CADDY_VERSION=(?<currentValue>v[0-9\\.]+)"
      ],
      "datasourceTemplate": "go",
      "packageNameTemplate": "github.com/caddyserver/caddy/v2",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "Dockerfile"
      ],
      "matchStrings": [
        "\\s+(?<packageName>github\\.com/[^\s@]+)@(?<currentValue>v?[^\s\\\\]+)"
      ],
      "datasourceTemplate": "go",
      "packageNameTemplate": "{{packageName}}",
      "versioningTemplate": "semver"
    }
  ]
}
